{
	"compilerOptions": {
		"charset": "utf8",
		"lib": [
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"newLine": "lf",
		"noEmit": true,
		"outDir": "./build",
		"removeComments": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "es6",
		"types": [
			"node"
		]
	},
	"include": [
		"./src/**/*"
	]
}
